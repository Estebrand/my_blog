<div class = "wrapper">
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <hr class="line">
   
      <% @posts.each do |post| %>

      <div class="well">
          <div class="row">

              <p class="col col-md-4 col-sm-4 col-xs-4 title"><%= post.title  %></p>
              <p class="col col-md-4 col-sm-4 col-xs-4"><strong class="subheader">Author: </strong><%= post.author %></p>
              <p class="col col-md-4 col-sm-4 col-xs-4"><strong class="subheader">Created On: </strong><%= post.created_at.strftime("%d %b. %y")  %></p>

          </div>
              <hr class="line">
          <div>
            <p ><%= post.blog_entry %></p>
          </div>
            <hr class="line">

          <div class="row">

            <p class="col col-md-4 col-sm-4 col-xs-4"><%= link_to 'Show', post, class: "btn btn-info center-block" %></p>
            
            <p class="col col-md-4 col-sm-4 col-xs-4 "><%= link_to 'Edit', edit_post_path(post),class: "btn btn-primary center-block" %></p>
            
            <p class="col col-md-4 col-sm-4 col-xs-4"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-warning center-block"  %></p>
          </div>

        </div>
   <% end %>
     <hr class="line">
    <p class="center_text"> &copy;EsteBrand 2017</p>
</div>
