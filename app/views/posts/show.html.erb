
<h1 class="center_text"><%= @post.title %></h1>
<hr class="line">

<div class="well">
	<p id="notice"><%= notice %></p>

	<div class="row">
			<p class="col col-md-4 col-sm-4 col-xs-4">
			  <strong class="subheader">Title:</strong>
			  <%= @post.title %>
			</p>

			<p class="col col-md-4 col-sm-4 col-xs-4">
			  <strong class="subheader">Author:</strong>
			  <%= @post.user.username %>
			   <p><%= image_tag @post.user.avatar.url %></p>
			</p>



				<p class="col col-md-4 col-sm-4 col-xs-4">
			  <strong class="subheader">Created On:</strong>
			  <%= @post.created_at.strftime("%d %b. %y") %>
			</p>

	</div>

	<p>
	  <strong class="subheader"></strong>
	  <%= @post.blog_entry %>
	</p>
	
</div>	
	<hr class="line">
	

	<h4>Leave a Comment Below</h4>

	<div id="comment">
	  <%= render 'comments/form', comment: @comment %>
	<hr>

			<% @post.comments.each do |c| %>
					<div class="well">
						<p><%= c.user.username %> said...<br /></p>

					<!-- AVATAR -->
						<% if current_user.avatar.url != nil %>
						 <p><%= image_tag c.user.avatar.url %></p>
						 <% end %>


						<div class="well comment-color">
							<p><%= c.comment_entry %><br /></p>
						</div>
						<p>on <%= c.created_at.strftime("%d %b. %y") %></p>
						<%= link_to 'Change', edit_comment_path(id: c.id), class: "btn btn-info" %>	
					</div>
			<% end %>

	</div>
	
	<hr>


<hr class="line">
