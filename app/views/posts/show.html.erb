
<div class="container">
	<p id="notice"><%= notice %></p>

	<p >
	  <strong class="subheader">Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong class="subheader">Author:</strong>
	  <%= @post.author %>
	</p>

	<p>
	  <strong class="subheader">Blog entry:</strong>
	  <%= @post.blog_entry %>
	</p>
	
	<hr>
	
	<div id="comment">
	  <%= render 'comments/form', comment: @comment %>
	<hr>
		<% @post.comments.each do |c| %>
				<p><%= c.author %> said...<br /></p>
				<p><%= c.comment_entry %></p>

		<% end %>
	</div>
	
	<hr>
	
	<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %> 
	<%= link_to 'Back', posts_path, class: "btn btn-primary" %>

</div>