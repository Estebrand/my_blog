<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
          <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
         
          <p><%= link_to "Esteban's Blog", root_path, class: "navbar-brand" %></p>

          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">

            <ul class="navbar-nav mr-auto mt-4 mt-md-0">

              <li class="nav-item">
              <p><%= link_to "New Post", new_post_path, class: "nav-link" %></p>
              </li>
              <li class="nav-item">
               <p> <%= link_to "Posts", root_path, class: "nav-link" %> </p>
              </li>
            </ul>
   
          </div>
        </nav>


    	 <%= yield %>
   	  

    </div>
  </body>
</html>
